<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_640x1136"
    tools:context="com.example.abituriente.Main2Activity">

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_act_487x85"
        android:onClick="NextQuset"
        android:text="ЗАНОВО"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="РЕЗУЛЬТАТЫ ТЕСТА"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/button"
        android:max="100"
        android:progress="0"/>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar2"
        android:layout_alignStart="@+id/progressBar2"
        android:layout_marginTop="45dp"
        android:max="100"
        android:progress="0"/>

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar3"
        android:layout_alignStart="@+id/progressBar3"
        android:layout_marginTop="48dp"
        android:max="100"
        android:progress="0"/>

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar4"
        android:layout_alignStart="@+id/progressBar4"
        android:layout_marginTop="39dp" />

    <ProgressBar
        android:id="@+id/progressBar6"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/progressBar5"
        android:layout_alignStart="@+id/progressBar5"
        android:max="100"
        android:progress="0"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar2"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="24dp"
        android:text="Человек-природа" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar3"
        android:layout_below="@+id/progressBar2"
        android:layout_marginTop="18dp"
        android:text="Человек-техника" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_below="@+id/progressBar3"
        android:layout_marginTop="18dp"
        android:text="Человек-человек" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Человек-знаковая система"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Человек-художественный образ"
        android:layout_below="@+id/progressBar5"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="22dp" />


</RelativeLayout>

